<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DownloadActivity">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="380dp"
            android:layout_height="500dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/list_of_downloads"
            app:layoutManager="LinearLayoutManager"
            tools:context=".DownloadActivity"
            tools:listitem="@layout/check_boxes_item"
            app:layout_constraintVertical_bias="0.2"

    />
    <com.google.android.material.button.MaterialButton
            android:text="back to table list"
            android:layout_width="150dp"
            android:layout_height="70dp" android:id="@+id/back_to_list_tabs_btn1"
            android:background="@drawable/purple_gradient"
            app:backgroundTintMode="multiply"
            style="@style/TextAppearance.AppCompat.Button.textStyle"
            android:backgroundTintMode="src_over" android:hapticFeedbackEnabled="true" app:backgroundTint="#9401FB"
            android:drawableTintMode="multiply" android:textStyle="italic" android:textAllCaps="false"
            android:textSize="20sp"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"/>
    <com.google.android.material.button.MaterialButton
            android:text="download selected tabs"
            android:layout_width="150dp"
            android:layout_height="70dp" android:id="@+id/download_tab"
            android:background="@drawable/purple_gradient"
            app:backgroundTintMode="multiply"
            style="@style/TextAppearance.AppCompat.Button.textStyle"
            android:backgroundTintMode="src_over" android:hapticFeedbackEnabled="true" app:backgroundTint="#9401FB"
            android:drawableTintMode="multiply" android:textStyle="italic" android:textAllCaps="false"
            android:textSize="20sp"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>