<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserPanel_Activity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="151dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintVertical_bias="0.072">
        <TextView
                style="@style/TextView.textStyle"
                android:text="Email: "
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:textAlignment="center"
                android:background="@drawable/text_view_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/userEmail" android:layout_weight="1"
        />
        <TextView
                android:text="Password: "
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center"

                android:textAlignment="center"
                android:background="@drawable/text_view_border"
                style="@style/TextView.textStyle"
                android:layout_width="match_parent"

                android:layout_height="wrap_content" android:id="@+id/userPassword" android:layout_weight="1"

        />

    </LinearLayout>
    <com.google.android.material.button.MaterialButton
            android:text="Show user metadata"
            android:layout_width="170dp"
            android:layout_height="100dp" android:id="@+id/metadataBtn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/purple_gradient"
            app:backgroundTintMode="multiply"
            app:layout_constraintVertical_bias="0.5"
            android:backgroundTintMode="src_over" android:hapticFeedbackEnabled="true" app:backgroundTint="#9401FB"
            android:drawableTintMode="multiply" android:textStyle="italic" android:textAllCaps="false"
            style="@style/TextAppearance.AppCompat.Button.textStyle"
            android:textSize="20sp"/>
    <com.google.android.material.button.MaterialButton
            android:text="Go to tables list"
            android:layout_width="170dp"
            android:layout_height="100dp" android:id="@+id/gotoTablesList"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/purple_gradient"
            app:backgroundTintMode="multiply"
            app:layout_constraintVertical_bias="0.7"
            android:backgroundTintMode="src_over" android:hapticFeedbackEnabled="true" app:backgroundTint="#9401FB"
            android:drawableTintMode="multiply" android:textStyle="italic" android:textAllCaps="false"
            style="@style/TextAppearance.AppCompat.Button.textStyle"
            android:textSize="20sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>